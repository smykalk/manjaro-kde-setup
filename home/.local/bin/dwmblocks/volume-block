#!/bin/bash

volume=$(amixer sget Master | awk -F"[][%]" '/Left:/ { print $2 }')
status=$(amixer sget Master | awk -F"[][]" '/Left:/ { print $4 }')


if [[ $status = "off" ]]
then    
    icon=
elif (( $volume > 35 ))
then
    icon=
elif (( $volume > 10 ))
then
    icon=
else
    icon=
fi

printf "%s: %s%%" $icon $volume
